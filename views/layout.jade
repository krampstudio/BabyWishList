!!! xml
!!! strict
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/reset.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/start/jquery-ui-1.8.14.custom.css')
		script(type='text/javascript', src='/lib/jquery-1.5.1.min.js')
		script(type='text/javascript', src='/lib/jquery-ui-1.8.14.custom.min.js')
		script(type='text/javascript', src='/widgets.js')
	body(xmlns='http://www.w3.org/1999/xhtml', xml:lang='fr')
		#header= title
		#message-box
		#login-box
			- if (user == null)
				a#connector(href='#') Se connecter
				form#login-form
					label(for='login') Pseudo
					input#login(type='text',name='login')
					br
					label(for='passwd') Mot de passe
					input#passwd(type='password',name='passwd')
					br
					input#logger(type='button',value='connection')
			- else 
				a#deconnector(href='logout') Se Déconnecter
		#container!= body
		#contact
			#contact-title.ui-state-highlight 
				img.icon(src='/imgs/email_go.png') 
				| Nous contacter
			#contact-content
