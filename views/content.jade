- if (user != null)
	p Bonjour #{user.name} !
	br 
#intro Welcome to #{title} Welcome to #{title} Welcome to #{title} Welcome to #{title} Welcome to #{title}
#content
	ul
		li: a(href='#mustHave') Les indispensables
		li: a(href='#niceToHave') Les plus
	#mustHave
		ul.whishes
			- each article in articles
				li(id='#{article._id}')
					- if (article.thumb)
						-if(typeof(article.thumb) == 'string')
							img.thumbnails(src='/imgs/articles/#{article.thumb}')
						-if(typeof(article.thumb) == 'object')
							img.thumbnails(src='/imgs/articles/#{article.thumb[0]}')
					- else
						img.thumbnails(src='/imgs/articles/default.png')
					.article-title #{article.name}
					.article-desc #{article.description}
					.article-action: a(href='#') DÃ©tails
	#niceToHave
		ul.whishes
			- each article in articles
				li #{article.name} : #{article.description}

